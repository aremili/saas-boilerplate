# Application Configuration
# Copy this file to .env and configure your environment

# Application name
PROJECT_NAME="SaaS Boilerplate"

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables verbose logging, SQL echo)
# Set to false in production
DEBUG=true

# Database URL (12-factor: store config in environment)
# SQLite (development): sqlite+aiosqlite:///./app.db
# PostgreSQL (production): postgresql+asyncpg://user:pass@host:5432/dbname
DATABASE_URL="sqlite+aiosqlite:///./app.db"
