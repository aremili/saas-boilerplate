# Application Configuration
# Copy this file to .env and configure your environment

# Application name
PROJECT_NAME="SaaS Boilerplate"

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables verbose logging, SQL echo)
# Set to false in production
DEBUG=true

# PostgreSQL Configuration
POSTGRES_USER=saas
POSTGRES_PASSWORD=saas_password
POSTGRES_DB=saas_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL (12-factor: store config in environment)
# Built from PostgreSQL variables above for asyncpg driver
DATABASE_URL="postgresql+asyncpg://saas:saas_password@localhost:5432/saas_db"

# Logging configuration
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# LOG_FORMAT: "console" for development, "json" for production log aggregators
LOG_FORMAT=console
